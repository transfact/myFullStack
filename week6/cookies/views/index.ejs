  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">익스플로러가 지원 종료되었습니다.</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            익스플로러가 지원 종료되었습니다.
        </div>
        <div class="modal-footer">
            <input type="checkbox" id="checked" name="checked"><label for ="checked">더이상 안보기</label>
            <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="modalclicked()">닫기</button>
        </div>
      </div>
    </div>
  </div>
<script>
    window.onload = ()=>{
        if(document.cookie.split("=")[1]==0){
            console.log(document.getElementById("exampleModal"))
            $("#exampleModal").modal('show')
        }
    }
    function modalclicked(){
        if($("#checked").is(":checked")){
            console.log("checked")
            document.cookie = "modalclicked=1"
        }else{
            console.log("unchecked")
        }

    }
</script>

